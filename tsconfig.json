{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // B) if you want aliases, then ALSO configure Babel/Metro to match:
    "baseUrl": ".", 
    "paths": {
      "@app/*": ["src/app/*"],
      "@theme/*": ["src/theme/*"],
      "@theme": ["src/theme/index"]
    }
  }
}
